        </activity>
        <activity
            android:name="edu.gatech.cs4261.wheresdabeef.Captured_image"
            android:label="@string/title_activity_single_image"
            android:parentActivityName="edu.gatech.cs4261.wheresdabeef.HomeFeed" >
